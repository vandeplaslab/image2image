QtLayerControls QtImagePushButton{
    min-width : 20px;
    max-width : 20px;
    min-height : 20px;
    max-height : 20px;
    padding: 1px;
    border: 1px;
    margin: 1px;
}

QtLayerControls QtImagePushButton::checked{
    border-radius: 5px;
    background-color: {{ foreground }};
}

QtLayerControls QtImagePushButton::unchecked{
    background-color: {{ background }};
}

QtLayerControls QtImagePushButton::pressed{
    background-color: {{ foreground }};
}

QtLayerControls QtImagePushButton::hover{
    border-radius: 5px;
    background-color: {{ darken(foreground, 5) }};
}

QtLayerControls QtImagePushButton#small{
    min-width : 20px;
    max-width : 20px;
    min-height : 20px;
    max-height : 20px;
}
QtLayerControls QtImagePushButton#default{
    min-width : 28px;
    max-width : 28px;
    min-height : 28px;
    max-height : 28px;
}
QtLayerControls QtImagePushButton#medium{
    min-width : 40px;
    max-width : 40px;
    min-height : 40px;
    max-height : 40px;
}
QtLayerControls QtImagePushButton#large{
    min-width : 32px;
    max-width : 32px;
    min-height : 32px;
    max-height : 32px;
}
QtLayerControls QtImagePushButton#xlarge{
    min-width : 60px;
    max-width : 60px;
    min-height : 60px;
    max-height : 60px;
}
QtLayerControls QtImagePushButton#xxlarge{
    min-width : 80px;
    max-width : 80px;
    min-height : 80px;
    max-height : 80px;
}

QtCameraWidget QPushButton, QtCameraControls QPushButton {
    background-color: {{ foreground }};
    color: {{ text }};
    border: 2px;
    padding: 5px;
    margin: 3px;
}

QtCameraWidget QPushButton, QtCameraControls QPushButton {
    background-color: {{ foreground }};
    font-size: {{ font_size }};
    color: {{ text }};
    border: 2px;
    padding: 5px;
    margin: 3px;
}

QtCameraWidget QPushButton, QtCameraControls QPushButton:hover {
    background-color: {{ highlight }};
}

QtCameraWidget QPushButton, QtCameraControls QPushButton:pressed {
  background-color: {{ secondary }};
}
